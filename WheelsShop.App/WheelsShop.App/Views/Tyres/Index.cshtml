@model WheelsShop.App.Models.ViewModels.SearchTyreViewModel

@{
    ViewBag.Title = "Index";
}

<div class="col-md-4">
    @using (Html.BeginForm("AllTyres", "Tyres", FormMethod.Get))
    {
        <button id="homeBtn">
            <img id="homePageImage" src="../../Content/Images/tyre.jpg" />
            <br />
            <span>All tyres</span>
        </button>
    }
</div>

@using (Html.BeginForm("SearchTyre", "Tyres", FormMethod.Post, new { @class = "form-horizontal" }))
{
        <div class="dropdown">
            <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">
               Width <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">

            @foreach (var item in Model.Widths)
            {
                @:
                <li><a href="#">@item.Text</a></li>
            }
            </ul>
        </div>

        <div class="dropdown">
            <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">
                Height <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">

                @foreach (var item in Model.Height)
                {
                    @:
                    <li><a href="#">@item.Text</a></li>
                }
            </ul>
        </div>

        <div class="dropdown">
            <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">
                Sizes <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">

                @foreach (var item in Model.Sizes)
                {
                    @:
                    <li><a href="#">@item.Text</a></li>
                }
            </ul>
        </div>

        <div class="dropdown">
            <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">
                Season <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">

                @foreach (var item in Model.Seasons)
                {
                    @:
                    <li><a href="#">@item.Text</a></li>
                }
            </ul>
        </div>

        <div class="dropdown">
            <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">
                Brands <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">

                @foreach (var item in Model.Brands)
                {
                    @:
                    <li><a href="#">@item.Text</a></li>
                }
            </ul>
        </div>
}

