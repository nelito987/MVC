@model WheelsShop.App.Models.ViewModels.SearchTyreViewModel

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("AllTyres", "Tyres", FormMethod.Get))
        {
            <button id="homeBtn">
                <img id="homePageImage" src="../../Content/Images/tyre.jpg" />
                <br />
                <span>All tyres</span>
            </button>
        }
    </div>
    </br>
    @using (Html.BeginForm("SearchTyre", "Tyres", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div class="row">
            <div class="col-md-2">
                @Html.Label("Width: ")
                @Html.DropDownListFor(model => model.Widths, Model.Widths, "", new { @class = "form-control", placeholder = "Width" })
            </div>
            <div class="col-md-2">
                @Html.Label("Height: ")
                @Html.DropDownListFor(model => model.Height, Model.Height, "", new { @class = "form-control", placeholder = "Height" })
            </div>
            <div class="col-md-2">
                @Html.Label("Size: ")
                @Html.DropDownListFor(model => model.Sizes, Model.Sizes, "", new { @class = "form-control", placeholder = "Size" })
            </div>
            <div class="col-md-2">
                @Html.Label("Season: ")
                @Html.DropDownListFor(model => model.Seasons, Model.Seasons, "", new { @class = "form-control", placeholder = "Season" })
            </div>
            <div class="col-md-2">
                @Html.Label("Brand: ")
                @Html.DropDownListFor(model => model.Brands, Model.Brands, "", new { @class = "form-control", placeholder = "Brand" })
            </div>
            <div class="col-md-2">                
                <input type="submit" class="btn btn-default" value="Search" />
            </div>
        </div>
    }
</div>


