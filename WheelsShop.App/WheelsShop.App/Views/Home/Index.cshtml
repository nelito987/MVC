            <button id="homeBtn">
                <img id="homePageImage" src="../../Content/Images/tyre.jpg" />
                <br />
                <span>Tyres</span>               
            </button>

        }        
    </div>
    <div class="col-md-4">
        @using (Html.BeginForm("SearchWheel", "Wheels", FormMethod.Get))
        {            
            <button id="homeBtn">
                <img id="homePageImage" src="../../Content/Images/wheel.jpg" />
                <br />
                <span>Wheels</span>
            </button>
        }  
    </div>

    <div>
        <a href="http://www.michelin.com"><img id="logoImage" src="../../Content/Images/Michelin.jpg" /></a>
        <a href="http://www.bfgoodrich.com"><img id="logoImage" src="../../Content/Images/BFG.jpg" /></a>
        <a href="http://www.kormoran-tyres.com"><img id="logoImage" src="../../Content/Images/kormoran-tyres.jpg" /></a>
        <a href="http://www.ozracing.com"><img id="logoImage" src="../../Content/Images/oz.jpg" /></a>
        <a href="http://www.ozracing.com"><img id="logoImage" src="../../Content/Images/sparco.jpg" /></a>
        <a href="http://www.fondmetal.com"><img id="logoImage" src="../../Content/Images/fondmetal.jpg" /></a>
    </div>
</div>